              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
            android:layout_weight="1"
            android:id="@+id/viewpager_detail_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="This Detail Food"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </RelativeLayout>

</LinearLayout>